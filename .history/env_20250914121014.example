# ===========================================
# CONFIGURAÇÕES GERAIS
# ===========================================

# Ambiente (development, staging, production)
ENVIRONMENT=development

# URLs das aplicações
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# ===========================================
# BANCO DE DADOS POSTGRESQL
# ===========================================

# Configurações do PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gestao_processos
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# URL completa do banco (para SQLAlchemy)
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/gestao_processos

# ===========================================
# REDIS (CACHE)
# ===========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# URL do Redis
REDIS_URL=redis://localhost:6379/0

# ===========================================
# AUTENTICAÇÃO E SEGURANÇA
# ===========================================

# Chave secreta para JWT (GERE UMA NOVA EM PRODUÇÃO!)
SECRET_KEY=your-super-secret-key-change-in-production-123456789

# Tempo de expiração do token (em segundos)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Chave para criptografia de dados sensíveis
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Configurações de 2FA
TOTP_ISSUER=Gestão Processos

# ===========================================
# API EXTERNA - DATAJUD (CNJ)
# ===========================================

# URL base da API DataJud
DATAJUD_BASE_URL=https://api.datajud.cnj.jus.br

# Token de acesso (se necessário)
DATAJUD_API_TOKEN=your-datajud-token

# Timeout para requisições (em segundos)
DATAJUD_TIMEOUT=30

# ===========================================
# UPLOAD DE ARQUIVOS
# ===========================================

# Diretório para uploads locais
UPLOAD_DIR=./uploads

# Tamanho máximo do arquivo (em bytes) - 50MB
MAX_FILE_SIZE=52428800

# Tipos de arquivo permitidos
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png

# ===========================================
# EMAIL (NOTIFICAÇÕES)
# ===========================================

# Configurações SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email do remetente
FROM_EMAIL=noreply@gestaoprocessos.com
FROM_NAME=Sistema Gestão Processos

# ===========================================
# LOGGING E MONITORAMENTO
# ===========================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Diretório para logs
LOG_DIR=./logs

# Sentry DSN (para monitoramento de erros)
SENTRY_DSN=

# ===========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ===========================================

# Requests por minuto
RATE_LIMIT_PER_MINUTE=60

# Requests por hora
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# CONFIGURAÇÕES DE BACKUP
# ===========================================

# Diretório para backups
BACKUP_DIR=./backups

# Frequência de backup (cron format)
BACKUP_CRON=0 2 * * *

# Retenção de backups (em dias)
BACKUP_RETENTION_DAYS=30

# ===========================================
# CONFIGURAÇÕES ESPECÍFICAS DO NEGÓCIO
# ===========================================

# Moeda padrão
DEFAULT_CURRENCY=BRL

# Fuso horário
TIMEZONE=America/Sao_Paulo

# Formato de data
DATE_FORMAT=%d/%m/%Y

# Formato de data e hora
DATETIME_FORMAT=%d/%m/%Y %H:%M:%S

# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================

# Debug mode (apenas para desenvolvimento)
DEBUG=true

# Recriar banco a cada restart (apenas para desenvolvimento)
RECREATE_DB=false

# Seed de dados iniciais (apenas para desenvolvimento)
SEED_INITIAL_DATA=true

